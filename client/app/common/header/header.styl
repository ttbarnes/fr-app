@import '../../styles/variables';
@import 'mobile-menu';

fr-header
  position fixed
  top 0
  z-index 20
  background $nav-bg
  border-bottom solid 3px $color-bg-primary
  box-shadow 0 5px 12px $color-bg-primary
  @media (min-width: 1040px)
    width 110% !important
    margin 0 -5% !important
    transform skew(28.3deg)

  .nav-items
    background none
    &.nav-items-large
      a
        font-size 1.1em

    a
      color #D4D4D4
      &:hover,
      &:focus,
      &.active
        color $color-white

  .icon-nav
    float left
    font-size 2em
    padding 0.26em
    padding-right 0
    color $color-white
    max-width 33px
    opacity 0.6
    cursor pointer
    transition all 0.3s ease
    &.active
      opactiy 0
      transform rotate(450deg)
      padding-left 0
      padding-bottom 0.52em
      padding-top 0

    @media (min-width: 1040px)
      display none

  nav
    text-align center
