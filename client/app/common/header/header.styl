@import '../../styles/variables';
@import 'mobile-menu';

fr-header
  position fixed
  top 0
  z-index 20
  background $nav-bg
  border-bottom solid 3px $color-bg-primary
  box-shadow 0 13px 22px $color-bg-primary
  @media (min-width: 1060px)
    width 110% !important
    margin 0 -5% !important
    transform skew(28.3deg)

  .nav-items
    background none
    &.nav-items-large a
      font-size 1.1em

    a
      color #B2B2B2
      letter-spacing 1px
      text-transform uppercase
      &:hover,
      &:focus,
      &.active
        color #DADADA

  .icon-nav
    float left
    font-size 2em
    padding 0.26em
    padding-right 0
    color $color-logo
    max-width 33px
    opacity 0.6
    cursor pointer
    transition all 0.3s ease
    &.active
      opactiy 0
      transform rotate(450deg)
      padding-left 0
      padding-bottom 0.52em
      padding-top 0

    @media (min-width: 1060px)
      display none

  nav
    text-align center
