@import '../../styles/variables'

fr-header
  position fixed
  top 0
  z-index 3
  background-color $color-bg-secondary
  border-bottom solid 3px $color-bg-primary

  nav

    li
      display inline-block
      list-style-type none

    a
      color $color-text-secondary
      &:hover,
      &:focus
        outline 0 none

    .logo,
    .nav-links
      display inline-block
      a
        display block
        color $color-logo

    .logo
      vertical-align middle
      h1
        margin 0
      a
        padding-top 0.25em
        padding-right $gutter-primary
        padding-bottom 0.25em
        padding-left $gutter-primary
        @media (min-width $bp-md)
          padding $gutter-primary

        opacity 0.8
        text-shadow $shadow-heading-primary

        @media screen and (min-width: $bp-md)
          transition all 0.2s ease
          &:hover,
          &:focus
            opacity 1

    .nav-links
      display none
      vertical-align top
      @media screen and (min-width: $bp-md)
        display inline-block
      a
        padding 1.65em 0.5856em 1.26em 0.5856em
        opacity 0.4
        font-size 1.130em
        @media screen and (min-width: $bp-md)
          transition all 0.2s ease
          &:hover,
          &:focus
            opacity 1




