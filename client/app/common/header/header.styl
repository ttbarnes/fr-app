@import '../../styles/variables';
@import 'mobile-menu';

fr-header
  position fixed
  top 0
  z-index 20
  background-color $color-bg-secondary
  border-bottom solid 2px $color-bg-primary
  box-shadow 0 5px 12px $color-bg-primary

  .icon-nav
    float left
    font-size 2em
    padding 0.26em
    padding-right 0
    color $color-logo
    max-width 33px
    opacity 0.6
    cursor pointer
    transition all 0.3s ease
    &.active
      opactiy 0
      transform rotate(450deg)
      padding-left 0
      padding-bottom 0.52em
      padding-top 0

    @media screen and (min-width: $bp-md)
      display none

  nav

    li
      float left
      list-style-type none

    a
      color $color-text-secondary
      position relative
      z-index 6
      &:hover,
      &:focus
        outline 0 none

    .nav-links
      display none
      vertical-align top
      @media screen and (min-width: $bp-md)
        display inline-block
      a
        display block
        padding 1.65em 0.5856em 1.26em 0.5856em
        font-size 1.130em
        transition all 0.2s ease
        &:hover,
        &:focus,
        &.active
          background $color-bg-primary
          color $color-logo
      li.active a
        background $color-bg-primary
        color $color-logo

