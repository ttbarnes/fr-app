@import '../../styles/variables'

body.ng-pageslide-body-open::before
  content ''
  display block
  position fixed
  top 0
  background-color rgb(0,0,0)
  left 0
  right 0
  bottom 0
  z-index 999
  opacity 0.6
  transition opacity 0.2s
  pointer-events all
  @media (min-width: 1040px)
    display none

body.ng-pageslide-body-closed::before
  transition opacity 0.2s
  content ''
  display block
  position absolute
  top 0
  background-color rgb(0,0,0)
  left 0
  right 0
  bottom 0
  z-index 1
  opacity 0
  pointer-events none
  @media (min-width: 1040px)
    display none

.ng-pageslide
  transition-duration 0.3s !important
  border-right solid 5px #000
  background $color-bg-secondary
  @media (min-width: 1040px)
    display none

  .nav-items
    display block
    background none
    li
      float none
    a
      text-align left

  .logo
    font-size 1.1em
    color #B2B2B2
    letter-spacing 3px
    text-transform uppercase
    font-weight 300
    padding 13px $gutter-primary
    margin-bottom 0
    color $color-highlight-primary
    @media (min-width: 300px)
      font-size 1.2em

  a
    display block
    width 100%
    color #A0A0A0
    padding $gutter-primary 15px $gutter-primary 12px
    opacity 1
    text-transform uppercase
    letter-spacing 1px

.mobile-menu
  position relative

  .icon-cross
    position absolute
    top 0
    right 0
    background none
    color $color-text-primary
    margin 0
    border-radius 0
    font-size 24px
    padding 13px
    cursor pointer

body.ng-pageslide-body-open
  overflow-y hidden
  .ng-pageslide
    overflow-y auto
    box-shadow 11px 2px 32px #000
    max-width 80%
