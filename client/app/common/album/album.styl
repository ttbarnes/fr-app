@import '../../styles/variables'

section.album
  margin auto
  z-index 3
  max-width 500px
  @media (min-width $bp-md)
    max-width $section-max-width

  .mobile-only
    @media (min-width $bp-md)
      display none

  .desktop-only
    display none
    @media (min-width $bp-md)
      display block

  .col-first,
  .col-last
    @media (min-width $bp-md)
      padding-bottom $gutter-primary-x-lg

  .col-first
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg

    img
      margin-bottom $gutter-primary-lg
      @media (min-width $bp-md)
        margin-bottom 0
        border solid 2px rgba(64, 64, 64, 0.49)

  .col-last
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg
      padding-left $gutter-primary-x-lg

  .copy
    text-align center
    @media (min-width $bp-md)
      padding-bottom $gutter-primary-lg
      text-align left

  h2
    color $color-highlight-primary
    font-weight 300
    &.mobile-only
      text-align center
      margin-bottom 0.5em

  h3
    color $color-heading-primary
    font-weight 300

  .physical-copy
    text-align center
    @media (min-width $bp-md)
      text-align left
    a 
      border-bottom solid 1px $color-text-primary
      padding-bottom 0.2em
      transition all 0.2s ease
      &:hover,
      &:focus
        color $color-highlight-primary

  .coming-soon
    &.mobile-only
      display block
      width 100%
      text-align center
      padding-bottom $gutter-primary-lg
      @media (min-width $bp-md)
        display none
    &.desktop-only
      display none
      @media (min-width $bp-md)
        display block
        width 100%
        text-align left
        padding-bottom 0

  .cta-button
    padding $gutter-primary $gutter-primary-lg
    margin-right auto
    margin-left auto
    margin-top $gutter-primary-lg
    margin-bottom $gutter-primary-lg
    border solid 1px #FFF
    color #FFF
    border-radius 8px
    background-color #000
    display block
    opacity 0.5
    transition all 0.2s ease
    max-width 170px
    text-align center
    @media (min-width $bp-md)
      display inline-block
      margin-right $gutter-primary
      margin-left 0
      max-width 155px

  .written-by
    clear both
    padding-bottom $gutter-primary
    text-align center
    @media (min-width $bp-md)
      text-align left
    @media (min-width $bp-lg)
      padding-top $gutter-primary-lg
    p
      margin 0

  li
    &.last
      margin-bottom 0
  .quotes
    margin-top $gutter-primary-x-lg
    margin-bottom 0
    li
      margin-bottom $gutter-primary-xx-lg
      p
        margin-bottom 0
      .author,
      .read-full
        margin-top $gutter-primary

    &.latest-album-quotes
      .copy
        position relative
      .quote:last-child
        position absolute
        bottom 0

  .download-links
    float none
    display block
    width 100%
    max-width 322px
    margin 0 auto
    margin-bottom $gutter-primary-lg
    @media (min-width: $bp-md)
      max-width 1005%

    li
      margin $gutter-primary-lg auto
      max-width 170px
      clear both
      width 100%
      @media (min-width: $bp-xs)
        float left
        clear none
        width 149px
        margin-right $gutter-primary-lg

      @media (min-width: $bp-md)
        width 135px

      @media (min-width: $bp-md + 100px)
        width 149px

      &.itunes-preorder
        width 170px
        max-width 170px
        float none
        margin-top $gutter-primary-lg
        margin-right auto
        margin-left auto
        @media (min-width: $bp-md)
          float left 
          width 179px
          max-width 179px

        a
          opacity 1

      &.google
        @media (min-width: $bp-xs)
          margin-right 0
        @media (min-width: $bp-lg)
          width 155px

      &.amazon
        clear both
        @media (min-width: $bp-xs)
          margin-top 0
        img
          border-radius 8px
          border solid 1px #FFF

    a
      opacity 0.5
      transition all 0.2s ease
      &:hover,
      &:focus
        outline 0 none
        opacity 1

    img
      width 100%

  .plangular
    margin-top $gutter-primary-x-lg
  
  .album-press
    a.button
      color $color-highlight-primary
      padding $gutter-primary
      display inline-block
      &:hover,
      &:focus
        border-bottom solid 1px #616161
