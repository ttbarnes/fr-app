@import '../../styles/variables'

section.album
  margin auto
  z-index 3
  max-width 500px
  @media (min-width $bp-md)
    max-width $section-max-width

  .mobile-only
    @media (min-width $bp-md)
      display none

  .desktop-only
    display none
    @media (min-width $bp-md)
      display block

  .col-first,
  .col-last
    @media (min-width $bp-md)
      padding-bottom $gutter-primary-x-lg

  .col-first
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg

    img
      margin-bottom $gutter-primary-lg
      @media (min-width $bp-md)
        margin-bottom 0
        border solid 2px rgba(64, 64, 64, 0.49)

  .col-last
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg
      padding-left $gutter-primary-x-lg

  .copy
    text-align center
    @media (min-width $bp-md)
      padding-bottom $gutter-primary-lg
      text-align left

  h2
    color $color-highlight-primary
    &.mobile-only
      text-align center
      margin-bottom $gutter-primary-lg

  h3
    color $color-heading-primary

  .coming-soon
    padding 1.05em
    margin-right auto
    margin-left auto
    margin-top $gutter-primary-lg
    margin-bottom $gutter-primary-lg
    border solid 1px #FFF
    color #FFF
    border-radius 8px
    background-color #000
    display block
    opacity 0.5
    transition all 0.2s ease
    max-width 140px
    text-align center
    @media (min-width $bp-md)
      display inline-block
      margin-right 0
      margin-left 0

  .written-by
    clear both
    padding-top $gutter-primary-lg
    padding-bottom $gutter-primary
    text-align center
    @media (min-width $bp-md)
      text-align left
    p
      margin 0

  li
    &.last
      margin-bottom 0
  .quotes
    margin-top $gutter-primary-x-lg
    margin-bottom 0
    li
      margin-bottom $gutter-primary-x-lg

    &.latest-album-quotes
      span.author
        margin-left 5.9%
      .copy
        position relative
      .quote:last-child
        position absolute
        bottom 0

  .download-links
    float none
    display block
    width 100%
    max-width 322px
    margin 0 auto
    margin-bottom $gutter-primary-lg
    @media (min-width: $bp-md)
      max-width 1005%

    li
      margin $gutter-primary-lg auto
      max-width 170px
      clear both
      width 100%
      @media (min-width: $bp-xs)
        float left
        clear none
        width 149px
        margin-right $gutter-primary-lg

      @media (min-width: $bp-md)
        width 135px

      @media (min-width: $bp-md + 100px)
        width 149px

      &.google
        @media (min-width: $bp-xs)
          margin-right 0
        @media (min-width: $bp-lg)
          width 155px

      &.amazon
        clear both
        @media (min-width: $bp-xs)
          margin-top 0
        img
          border-radius 8px
          border solid 1px #FFF

    a
      opacity 0.5
      transition all 0.2s ease
      &:hover,
      &:focus
        outline 0 none
        opacity 1

    img
      width 100%

  .plangular
    margin-top $gutter-primary-x-lg