@import '../styles/variables'

*
  box-sizing border-box

body
  background:$color-bg-primary;
  color:$color-text-primary;
  height 100%
  font 100% 'Source Sans Pro', Arial, sans-serif
  font-weight 300


.container
  max-width 1200px
  margin 0 auto

section
  padding $gutter-primary-lg $gutter-primary-lg + .05em
  padding-top $section-gutter-horizontal
  @media (min-width $bp-md)
    padding-top $section-gutter-horizontal
    padding $gutter-primary-lg

fr-header,
fr-footer
  display block

fr-header,
.ui-view-wrap
fr-footer,
.row
  float left
  clear both
  width 100%

.row
  margin-bottom $row-margin-bottom

.app > .container > .row
  margin-bottom 0
  @media (min-width $bp-md)
    margin-bottom $row-margin-bottom

.icon-s-s,
.icon-ssp,
.icon-s-t,
.icon-s-f,
.icon-s-i,
.icon-s-y,
.icon-link,
.icon-read,
.icon-phone
  display inline-block
  vertical-align middle
  width 28px
  height 28px
  font-size 1em
  border-radius 50%
  color $color-white
  text-align center
  background-color $color-bg-secondary

.icon-s-s
  background #E17842
  padding-top 2px
  &::before
    margin-top 3px

.icon-ssp
  background #1db954
  font-size 1.55em
  margin-right 10px !important
  padding-top 1.5px
  &::before
    margin-left 1px

.icon-s-t
  background #1EBCED
  padding-top 6px
  padding-bottom 2px
  &::before
    margin-top 1px
    margin-left 1.5px

.icon-s-f
  background #3A5bA2
  &::before
    margin-top 5px

.icon-s-i
  background #7E2B8A
  &::before
    margin-top 5px

.icon-s-y
  background #E02F2F
  font-size 0.9em
  padding-top 1px
  &::before
    margin-top 6px

.icon-link
  &::before
    margin-top 5px

.icon-read
  &::before
    margin-top 7px
    font-size 0.9em

.icon-phone
  &::before
    margin-top 5px

.hide-sm
  @media (min-width: $bp-sm)
    display none

.show-sm
  display none
  @media (min-width: $bp-sm)
    display block


.hide-md
  @media (min-width: $bp-md)
    display none

.show-md
  display none
  @media (min-width: $bp-md)
    display block

.sr-only
  display none

.box-heading
  background-color rgba(0, 0, 0, 0.22)
  color $color-white
  padding $gutter-primary
  font-size 1em
  text-shadow 0 2px 5px $color-bg-primary

.main-content
  margin 0 auto
  @media (min-width $bp-sm)
    padding-right $gutter-primary-x-lg + $gutter-primary
    padding-left $gutter-primary-x-lg + $gutter-primary
  @media (min-width $bp-lg)
    padding-right $gutter-primary-x-lg
    padding-left $gutter-primary-x-lg

.include-bg-img
  .img-bg
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    margin 0 auto
    z-index 1

  .main-content
    position relative
    z-index 2

  .button-view-nav
    position relative
    z-index 3
    margin-bottom $gutter-primary-xx-lg
    @media (min-width $bp-lg)
      margin-bottom $gutter-primary

.video-wrapper
  clear both
  position relative
  z-index 2
  max-width 800px
  //16:9
  // padding-bottom 56.25%
  padding-bottom 47.25%
  height 0
  text-align center
  margin 0 auto $gutter-primary-x-lg auto
  @media (min-width $bp-lg)
    margin-bottom $gutter-primary-xx-lg
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    box-shadow 0 13px 22px #121212

.video-wrapper-small
  padding-bottom 56.25%
  @media (min-width $bp-lg)
    padding-bottom 29.25%
    max-width 600px

.social-links-hover-rotate
  a
    opacity 1
    transition all 0.3s ease
    display block
    &:hover,
    &:focus
      outline 0 none
      color $color-white
    i,
    img
      transition all 0.3s ease

    img
      max-width 28px
      display inline-block
      vertical-align middle
    @media (min-width: $bp-md)
      &:hover,
      &:focus
        opacity 1
        i,
        img
          transform rotate(360deg)

.social-links-large
  @media (min-width $bp-md)
    padding-top $gutter-primary-lg
  li
    text-align center
    width 33%
    float left
    clear none
    color $color-blockquote
    margin-bottom $gutter-primary-x-lg
    @media (min-width: $bp-md)
      float left
      width 16.66%
    p
      margin-bottom 0
    i,
    img
      margin-bottom 15px
      opacity 1
      width 50px
      height 50px
      @media (min-width: $bp-md)
        opacity .95
        width 70px
        height 70px
      &::before
        margin-top 9px
        font-size 2em
        @media (min-width: $bp-md)
          margin-top 19px
      &.icon-s-s
        &::before
          margin-top 5px
          @media (min-width: $bp-md)
            margin-top 17px
      &.icon-ssp
        margin-right 0 !important
        &::before
          margin-top 0
          @media (min-width: $bp-md)
            margin-top 11px
      &.icon-s-t
        &::before
          margin-top 9px
          font-size 1.8em
          @media (min-width: $bp-md)
            margin-top 17px
            font-size 2em
      &.icon-s-y::before
        margin-top 10px
        @media (min-width: $bp-md)
          margin-top 21px

    img
      width 50px
      max-width 50px
      height 50px
      @media (min-width: $bp-md)
        width 70px
        height 70px
        max-width 70px

    p
      letter-spacing 1px
      font-size 1em
      @media (min-width: $bp-lg)
        font-size 1.1em
    a
      display block
    a:hover,
    a:focus
      color $color-highlight-primary
      i
        opacity 1

.view-message-short
  margin 0 auto
  @media (min-width: $bp-md)
    float none !important
  .main-content
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg - $gutter-primary-lg

  p.page-heading
    color $color-highlight-primary
    font-size $font-size-h3-mobile
    margin-bottom $gutter-primary-lg
    @media (min-width $bp-md)
      font-size $font-size-h3-desktop

  .button
    width auto
    margin-top $gutter-primary

.intro-copy
    float none
    margin 0 auto $gutter-primary-xx-lg auto
    line-height 1.7em
    &.row-last
      padding-top $gutter-primary-x-lg
    a
      color $color-white
      word-break break-word
    li
      margin-bottom $gutter-primary-lg

p.promise-error-custom-message
  font-size 1.6em
  margin-bottom 2em
  color $color-highlight-primary
  @media (min-width: $bp-sm)
    margin-top 1em
  @media (min-width: $bp-md)
    margin-top 0
    font-size 2em
