@import '../styles/variables'

*
  box-sizing border-box

body
  background:$color-bg-primary;
  color:$color-text-primary;
  height 100%
  font 100% 'Source Sans Pro', Arial, sans-serif
  font-weight 300


.container
  max-width 1200px
  margin 0 auto

section
  padding $gutter-primary-lg
  padding-top $section-gutter-horizontal

fr-header,
fr-footer
  display block

fr-header,
.ui-view-wrap
fr-footer,
.row
  float left
  clear both
  width 100%

.row
  margin-bottom $row-margin-bottom

  > li
    max-height 200px
    overflow hidden
    height 150px
    cursor pointer
    @media screen and (min-width: $bp-xs)
      height 200px
      max-height 200px
    @media screen and (min-width: $bp-sm)
      height 220px
      max-height 220px
    @media screen and (min-width: $bp-md)
      height 145px
      max-height 145px
    @media screen and (min-width: $bp-md + 100px)
      height 170px
      max-height 170px
    @media screen and (min-width: $bp-lg)
      height 190px
      max-height 190px
    @media screen and (min-width: $bp-lg + 100px)
      height 210px
      max-height 210px
    @media screen and (min-width: $bp-lg + 170px)
      height 225px
      max-height 225px

    img
      width 100%
      transition all 0.8s ease
    a
      display block
      opacity 0.5
      transition all 1s ease
      &:hover
        transition all 0.2s ease
        opacity 1
        img
          width 105%
          max-width 105%
          margin -2.5% 0 0 -2.5%

  > .row > div
    &:hover
      .box-heading
        background-color rgba(0, 0, 0, 0.22)
      ul
        opacity 1
        color $color-highlight-primary

.icon-s-s,
.icon-s-t,
.icon-s-f,
.icon-s-i,
.icon-link,
.icon-read,
.icon-phone
  display inline-block
  vertical-align middle
  width 28px
  height 28px
  font-size 1em
  border-radius 50%
  color #FFF
  text-align center
  background-color $color-bg-secondary

.icon-s-s
  background #E17842
  &::before
    margin-top 3px

.icon-s-t
  background #1EBCED
  padding-top 5px
  padding-bottom 2px
  &::before
    margin-top 1px
    margin-left 1.5px

.icon-s-f
  background #3A5bA2
  &::before
    margin-top 5px

.icon-s-i
  background #7E2B8A
  &::before
    margin-top 5px

.icon-link
  &::before
    margin-top 5px

.icon-read
  &::before
    margin-top 7px
    font-size 0.9em

.icon-phone
  &::before
    margin-top 5px

.hide-sm
  @media screen and (min-width: $bp-sm)
    display none

.show-sm
  display none
  @media screen and (min-width: $bp-sm)
    display block

.sr-only
  display none

.box-heading
  background-color rgba(0, 0, 0, 0.22)
  color #FFF
  padding $gutter-primary
  font-size 1em
  text-shadow 0 2px 5px $color-bg-primary

.main-content
  margin 0 auto

.include-bg-img

  .img-bg
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    margin 0 auto
    z-index 1

  .main-content
    position relative
    z-index 2

  .button-view-nav
    position relative
    z-index 3


