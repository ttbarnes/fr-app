@import '/fonts/fontcustom.css'
@import url(https://fonts.googleapis.com/css?family=Belleza);

$bp-xs = 450px
$bp-sm = 600px
$bp-md = 768px
$bp-lg = 1000px

$color-logo = #CBCBCB;

$color-bg-primary = #121212
$color-heading-primary = #B5B5CD
$shadow-heading-primary = 0 3px 2px #000
$color-text-primary = #767676
$color-highlight-primary = #B0B0B0

$gutter-primary = 0.5856em
$gutter-primary-lg = $gutter-primary * 2
$gutter-primary-x-lg = $gutter-primary-lg * 2
$gutter-primary-xx-lg = $gutter-primary-x-lg * 2

$color-bg-secondary = #282828
$color-text-secondary = #717171
$color-highlight-secondary = #767676

$color-bg-tertiary = #1B1B1B
$color-text-tertiary = #313131

$color-red = #6A2A30;
$color-green = #2A6A3C;

$font-size-h1 =  2.35em
$font-size-h3 =  1.7em


$button-spacing-vertical =  0.5em
$button-spacing-horizontal =  1.3em
$button-spacing = $button-spacing-vertical $button-spacing-horizontal

$button-spacing-lg-vertical = $button-spacing-vertical * 4
$button-spacing-lg-horizontal = $button-spacing-horizontal

$color-box-bg = #161616

$header-height = 66px

*
  box-sizing border-box

body
  background:$color-bg-primary;
  color:$color-text-primary;
  height 100%
  font 75% 'Belleza', sans-serif

.container
  max-width 1200px
  margin 0 auto

img
  max-width 100%

blockquote
  clear both
  margin $gutter-primary-lg 0
  padding $gutter-primary-x-lg $gutter-primary-lg
  font-size 1.4em
  font-style italic
  color $color-highlight-primary
  line-height 1.5em
  text-align center
  @media (min-width $bp-sm)
    font-size 1.6em
  span
    display inline-block
    &.copy
      width 86%
      vertical-align baseline
    &.quote
      color #424242
      font-size 5em
      &:first-child
        vertical-align top
        margin-bottom -0.1em
        margin-left -0.45em
        @media (min-width $bp-sm)
          margin-left 0
      &:last-child
        display none
        vertical-align bottom
        margin-bottom -0.3em
        @media (min-width $bp-sm)
          display inline-block
          margin-left -0.2em

h1,
h2,
h3,
h4,
h5,
h6
  font-weight normal
  margin 0 0 0.5em 0

h1
  font-size $font-size-h1 !important

h3
  font-size $font-size-h3

h4
  font-size 2.3em

.font-size-large
  font-size $font-size-h3

p
  margin 0 0 $gutter-primary-lg 0
  padding 0

a
  text-decoration none
  color:$color-text-primary;

ul,
ol,
dl
  margin 0
  padding 0

li
dl
  list-style-type none

button,
.button,
input[type="submit"],
textarea
  border 0 none
  appearance none
  -webkit-appearance none
  -moz-appearance none

button,
.button,
.button-lg
  opacity 1
  display block
  background $color-bg-secondary
  color $color-logo
  transition all 0.1s ease

button,
.button
  padding $button-spacing
  font-size 1.6em

.button-lg
  padding $button-spacing-lg-vertical $button-spacing-lg-horizontal

.button[disabled],
.button-lg[disabled]
  opacity 0.6


input,
textarea
  border solid 1px $color-bg-secondary
  background $color-box-bg
  width 100%
  padding $gutter-primary-lg
  transition all 0.1s ease
  &:focus
    outline 0 none
    border-color #525252
    color $color-highlight-primary

input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder
  color $color-text-primary

input:-moz-placeholder,
textarea:-moz-placeholder
  color $color-text-primary

input::-moz-placeholder,
textarea::-moz-placeholder
  color $color-text-primary

input:-ms-input-placeholder,
textarea:-ms-input-placeholder
  color $color-text-primary

textarea
  max-width 100%
  max-height 250px !important

section
  padding $gutter-primary-lg
  padding-top 3em

.row
  margin-bottom $gutter-primary-lg + $gutter-primary

.align-right
  text-align right

.align-left
  text-align left

.align-center
  text-align center

fr-header,
fr-footer
  display block

fr-header,
.ui-view-wrap
fr-footer,
.row
  float left
  clear both
  width 100%

[ui-view]
  min-height 520px
  padding-top $header-height

.col-1-3rd
  @media screen and (min-width: 600px)
    float left
    width 33.3%

.col-20
  @media screen and (min-width: 600px)
    float left
    width 20%

.col-30
  @media screen and (min-width: 600px)
    float left
    width 30%

.col-30-md
  @media screen and (min-width: $bp-md)
    float left
    width 30%

.col-40
  @media screen and (min-width: 600px)
    float left
    width 40%

.col-40-md
  @media screen and (min-width: $bp-md)
    float left
    width 40%

.col-50
  @media screen and (min-width: 600px)
    float left
    width 50%

.col-50-md
  @media screen and (min-width: $bp-md)
    float left
    width 50%

.col-60
  @media screen and (min-width: 600px)
    float left
    width 60%

.col-60-md
  @media screen and (min-width: $bp-md)
    float left
    width 60%

.col-70
  @media screen and (min-width: 600px)
    float left
    width 70%

.col-70-md
  @media screen and (min-width: $bp-md)
    float left
    width 70%

.col-80
  @media screen and (min-width: 600px)
    float left
    width 80%

.col-80-md
  @media screen and (min-width: $bp-md)
    float left
    width 80%

.col-12
  @media screen and (min-width: 600px)
    float left
    width 80%

.col-12-md
  @media screen and (min-width: $bp-md)
    float left
    width 100%

.margin-auto
  margin 0 auto

.cancel-float
  float none

.cancel-padding
  padding 0






.icon-cross,
.icon-tick
  display inline-block
  vertical-align baseline
  padding 0.25em
  margin-right $gutter-primary
  border-radius 50%

.icon-cross
  background $color-bg-primary
  color $color-highlight-primary

.icon-tick
  background $color-green
  color $color-highlight-primary



.sr-only
  display none