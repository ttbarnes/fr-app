$color-logo = #CBCBCB;

$color-bg-primary = #121212
$color-text-primary = #767676
$color-highlight-primary = #B0B0B0

$color-bg-secondary = #282828
$color-text-secondary = #717171
$color-highlight-secondary = #767676

$color-text-tertiary = #313131





body
  background:$color-bg-primary;
  color:$color-text-primary;
  height 100%
  font 75% 'Roboto', sans-serif

img
  max-width 100%

blockquote
  color $color-highlight-primary

h3
  font-size 1.7em

h4
  font-size 2.3em

ul
  margin 0
  padding 0


fr-header,
fr-footer
  display block

fr-header,
fr-footer,
.row
  clear both
  width 100%

.col-50
  @media screen and (min-width: 600px)
    float left
    width 50%