@import '../styles/variables'

*
  box-sizing border-box

body
  background:$color-bg-primary;
  color:$color-text-primary;
  height 100%
  font 100% 'Belleza', Arial, sans-serif

.container
  max-width 1200px
  margin 0 auto

section
  padding $gutter-primary-lg
  padding-top 3em

fr-header,
fr-footer
  display block

fr-header,
.ui-view-wrap
fr-footer,
.row
  float left
  clear both
  width 100%

.row
  margin-bottom $gutter-primary-lg + $gutter-primary

.grid-image-link-hover
  &:hover
    > li a
      opacity: 0.3

  > li
    max-height 200px
    overflow hidden
    height 150px
    cursor pointer
    @media screen and (min-width: $bp-xs)
      height 200px
      max-height 200px
    @media screen and (min-width: $bp-sm)
      height 220px
      max-height 220px
    @media screen and (min-width: $bp-md)
      height 145px
      max-height 145px
    @media screen and (min-width: $bp-md + 100px)
      height 170px
      max-height 170px
    @media screen and (min-width: $bp-lg)
      height 190px
      max-height 190px
    @media screen and (min-width: $bp-lg + 100px)
      height 210px
      max-height 210px
    @media screen and (min-width: $bp-lg + 170px)
      height 225px
      max-height 225px

    img
      width 100%
      transition all 0.8s ease
    a
      display block
      opacity 0.5
      transition all 1s ease
      &:hover
        transition all 0.2s ease
        opacity 1
        .grid-image-link-hover &
          border solid 2px orange
        img
          width 105%
          max-width 105%
          margin -2.5% 0 0 -2.5%


