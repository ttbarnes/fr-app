@import '../../styles/variables'

.sticky-social
  display block
  position relative
  top 70px
  left 0
  z-index 3
  text-align center
  a
    opacity 1
  @media (min-width $bp-sm)
    position fixed
    top 100px
  @media (min-width $bp-md)
    top 155px
  li
    display inline-block
    margin-bottom $gutter-primary-lg - $gutter-primary-xs
    i.icon-ssp
      margin-right 0 !important
    @media (min-width $bp-sm)
      display block
    a
      padding-left 10px
      @media (min-width $bp-sm)
        opacity .8
