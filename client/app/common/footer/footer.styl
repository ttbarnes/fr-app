@import '../../styles/variables'

footer
  position relative
  z-index 3
  padding 2.5em 0
  background-color $color-bg-tertiary
  color $color-text-tertiary

  h4
    font-size $font-size-h1-mobile
    padding 0 $gutter-primary
    @media (min-width $bp-md)
      font-size $font-size-h1-desktop


  li
    font-size 1.130em

    i
      margin-top -2px
      margin-right 0.55em
      transition all 0.2s ease

      &.icon-s-s
        font-size 1.1em
        margin-right 0.45em

      .icon-s-f
        &::before
          margin-top 5px

  a
    width 100%
    color #FFF
    transition all 0.3s ease
    @media screen and (min-width: $bp-md)
      width auto

  .nav-links
    a
      display inline-block
      padding $gutter-primary $gutter-primary-lg
      opacity 0.4
      &:hover,
      &:focus
        outline 0 none
      @media screen and (min-width: $bp-md)
        &:hover,
        &:focus
          opacity 1
          i
            transform rotate(360deg)
