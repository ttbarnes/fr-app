@import '../common'

footer
  padding 2.5em 0
  background-color $color-bg-tertiary
  color $color-text-tertiary

  h4
    padding 0 $gutter-primary


  li
    font-size 1.5em

    i
      display inline-block
      vertical-align baseline
      color #FFF
      padding 3.5px 5px
      border-radius 50%
      font-size 1em
      margin-right 0.55em

      &.icon-soundcloud
        font-size 1.1em
        margin-right 0.45em
        background #E17842

      &.icon-twitter
        padding-top 5px
        padding-bottom 2px
        background #1EBCED

      &.icon-facebook
        background #3A5bA2


  a
    color #FFF

  .nav-links
    a
      display inline-block
      padding 0.5em 1em
      opacity 0.4
      &:hover
        opacity 1