@import 'variables'

h1,
h2,
h3,
h4,
h5,
h6
  font-weight normal
  margin 0 0 0.5em 0

h1
  font-size $font-size-h1 !important

h3
  font-size $font-size-h3

h4
  font-size 2.3em

.font-size-large
  font-size $font-size-h3

p
  margin 0 0 $gutter-primary-lg 0
  padding 0

a
  text-decoration none
  color:$color-text-primary;

ul,
ol,
dl
  margin 0
  padding 0

li
dl
  list-style-type none
