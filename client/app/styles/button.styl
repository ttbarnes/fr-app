@import 'variables'

button,
.button,
input[type="submit"],
textarea
  border 0 none
  appearance none
  -webkit-appearance none
  -moz-appearance none

button,
.button,
.button-lg,
input[type="submit"]
  width 100%
  opacity 1
  display block
  background #3E3E3E
  color $color-logo
  letter-spacing 1px
  transition all 0.2s ease
  &:focus
    outline 0 none
  @media (min-width $bp-md)
    &:hover,
    &:focus,
    &.loading
      text-decoration none
      background #323232


button,
.button
  padding $button-spacing
  font-size 1.1em
  @media (min-width $bp-sm)
    font-size 1.4em

.button-lg
  padding $button-spacing-lg-vertical $button-spacing-lg-horizontal
  font-size 1.1em
  @media (min-width $bp-sm)
    font-size 1.4em

.button[disabled],
.button-lg[disabled]
  opacity 0.6
  @media (min-width $bp-md)
    &:hover,
    &:focus
      background $color-bg-secondary
      color $color-logo


.button-view-nav
  display inline-block
  width 100%
  text-align center
  margin-bottom $row-margin-bottom
  @media (min-width $bp-sm)
    text-align center

.button-view-nav a
  clear both
  width auto
  display inline-block
  padding-right $gutter-primary
  margin-top $gutter-primary-xx-lg - $gutter-primary-lg
  line-height initial
  text-align left
  letter-spacing 1px
  @media (min-width: $bp-xs)
    width auto
    display inline-block
    margin 0 auto
    margin-top $gutter-primary-x-lg + $gutter-primary
  @media (min-width: $bp-sm)
    width auto
    text-align left
  span
    float left
  &.text-link
    margin-top $gutter-primary
    opacity 0.7
    transition all 0.2s ease
    &:hover,
    &:focus
      opacity 1
    @media (min-width: $bp-sm)
      padding-right 1.8em
      padding-left 1.8em

  small,
  i
    transition all 0s ease
  small
    display block
    opacity 0.7
    font-size 70%
  i
    opacity 0.3
    background none
    margin-right 0
    position relative
    float right
    top 2px
    padding-top 0.1em
    font-size 1.1em
    margin-left 5px
    @media (min-width $bp-xs)
      top 1px
     @media (min-width $bp-sm)
      top 2px
      margin-left 0

  @media (min-width $bp-md)
    &:hover,
    &:focus
      small
        opacity 0.5
      i
        opacity 1

  &.w-sub-copy
    i
      padding-top 0.05em
      font-size 2em
