@import 'variables'

.album-cols

  > .col
    position relative
    max-width 500px
    margin 0 auto
    text-align center
    padding $gutter-primary-lg
    @media (min-width $bp-sm)
      padding $gutter-primary-lg
    @media (min-width $bp-lg)
      padding 0
      max-width 600px

    a
      display block

    .img-wrap
      display block
      width 100%
      max-height 406px
      overflow hidden
      @media (min-width $bp-xs)
        max-width 80%
      @media (min-width $bp-sm)
        max-width 100%
      @media (min-width $bp-md)
        transition all 0.3s ease
        max-width 95%
    img
      opacity .65
      @media (min-width $bp-md)
        transition all 0.3s ease
        width 95%

  .overlay
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    width 100%
    height 100%
    background #000
    opacity .5
    color #FFF
    font-size 1.2em
    i
      font-size 3.8em
      border-radius 50%
      background #000
      padding 1em
    &.coming-soon-overlay
      opacity .6
    @media (min-width $bp-md)
      transition all 0.3s ease
      width 95%

    .content
      position relative
      display block
      top 40%

  .col
    a:focus
      img
        opacity 1

    @media (min-width $bp-md)
      &:hover
        .overlay-hover
          opacity 0
        .released img
          opacity 1
          width 100%
          max-width 100%
          margin -2.5% 0 0 -2.5%
          box-shadow 0 2px 2px #000


