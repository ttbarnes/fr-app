.grid-layout-4-4
  li
    @media screen and (min-width: $bp-sm)
      padding $gutter-primary
    @media screen and (min-width: $bp-lg)
      padding $gutter-primary-lg

.grid-col-hover

  > li
    max-height 200px
    overflow hidden
    height 150px
    cursor pointer
    @media screen and (min-width: $bp-xs)
      height 200px
      max-height 200px
    @media screen and (min-width: $bp-sm)
      height 220px
      max-height 220px
    @media screen and (min-width: $bp-md)
      height 145px
      max-height 145px
    @media screen and (min-width: $bp-md + 100px)
      height 170px
      max-height 170px
    @media screen and (min-width: $bp-lg)
      height 190px
      max-height 190px
    @media screen and (min-width: $bp-lg + 100px)
      height 210px
      max-height 210px
    @media screen and (min-width: $bp-lg + 170px)
      height 225px
      max-height 225px

    img
      width 100%
      transition all 0.8s ease
    a
      display block
      opacity 0.5
      transition all 1s ease
      @media screen and (min-width: $bp-md)
        &:hover
          transition all 0.2s ease
          opacity 1
          img
            width 105%
            max-width 105%
            margin -2.5% 0 0 -2.5%

  > .row > div
    @media screen and (min-width: $bp-md)
      &:hover
        .box-heading
          background-color rgba(0, 0, 0, 0.22)
        ul
          opacity 1
          color $color-highlight-primary