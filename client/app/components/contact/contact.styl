@import '../../common'

.contact
  .error
    display inline-block
    vertical-align top
    margin-bottom $gutter-primary-lg + $gutter-primary
    padding $gutter-primary $gutter-primary-lg
    background $color-red
    color $color-highlight-primary
    a
      color $color-highlight-primary
      text-decoration underline
      &:hover,
      &:focus
        text-decoration none

.contact-success

  .row
    display block
  .sub
    display block
    clear both