@import '../../styles/variables'

.contact
  margin 0 auto
  float none !important
  width 100% !important
  padding-right 0
  padding-left 0
  max-width 500px
  @media (min-width $bp-md)
    max-width 950px
    padding-right $gutter-primary
    padding-left $gutter-primary

  .main-content
    float left
    width 100%
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg

  .col-left
    @media (min-width $bp-md)
      padding-right $gutter-primary-x-lg

  .col-right
    @media (min-width $bp-md)
      padding-left $gutter-primary-x-lg

  .contact-form-wrap
    float none
    margin 0 auto
    max-width 500px
    .card
      display inline-block
      vertical-align top
      float none
      width 100%

  .card
    float left
    width 100%
    margin-bottom $gutter-primary-x-lg
    @media (min-width $bp-md)
      width 33.333%
    .inner
      float left
      width 100%
      background $card-bg-mobile
      @media (min-width $bp-md)
        padding $gutter-primary-lg
        background $card-bg-desktop
        min-height 170px

    .content
      float left
      width 100%
      padding $gutter-primary
      padding-bottom $gutter-primary-lg
      @media (min-width $bp-md)
        padding 0
        opacity 0.7
      @media (min-width $bp-md + 150px)
        opacity 0.5
        transition all 0.3s ease
        &:hover
          opacity 1

    h4
      background $card-heading-bg-mobile
      color $color-highlight-primary
      border-bottom $tabbed-content-heading-border
      text-transform uppercase
      padding $gutter-primary
      font-weight 300
      @media (min-width $bp-md)
        background none
        border-bottom 0
        text-transform none
        padding 0
    p
      margin-bottom 0

    .title
      display block
      padding-bottom $gutter-primary

    i
      margin-right $gutter-primary
      @media (min-width $bp-md)
        display none
      @media (min-width $bp-md + 150px)
        display inline-block

  .cards-top
    margin-bottom 0
    @media (min-width $bp-md)
      margin-bottom $gutter-primary-lg
    .card
      @media (min-width $bp-md)
        padding 0 $gutter-primary
        &:first-child
          padding-left 0
        &:last-child
          padding-right 0
      .row
        margin-bottom 0
        padding-bottom $gutter-primary
        &:last-child
          padding-bottom 0

  .contact-form
    float left
    width 100%
    padding-bottom $gutter-primary
    @media (min-width $bp-sm)
      padding 0 0 $gutter-primary-lg 0
    @media (min-width $bp-md)
      padding 0

    h4
      @media (min-width $bp-sm)
        margin-bottom $gutter-primary-lg
      @media (min-width $bp-md)
        padding-bottom $gutter-primary
        margin-bottom $gutter-primary

    > .row
      margin-bottom 0
      padding 0 $gutter-primary
      @media (min-width $bp-sm)
        padding 0 $gutter-primary-lg
      @media (min-width $bp-md)
        padding 0

    > .row
      margin-bottom $gutter-primary-lg
      &:last-child
        margin-bottom 0
      > .row
        margin-bottom 0

  .row-error
    margin 0

  .row-textarea
    margin-bottom $gutter-primary-lg !important
    > .row:first-child
      margin-bottom 0

  .error
    float left
    padding $gutter-primary
    padding-bottom 0
    @media (min-width: $bp-md)
      padding-bottom $gutter-primary

    margin 0
    color $color-red

  .has-error
    float left
    input,
    textarea
      border-color $color-red

  .submit-error
    width 100%
    padding $gutter-primary
    background $color-red
    color $color-highlight-primary
    line-height 1.6em
    a
      color $color-highlight-primary
      text-decoration underline
      &:hover,
      &:focus
        text-decoration none

  button
    position relative

    .loader
      position absolute
      top 1.8em
      left $button-spacing-lg-horizontal

.contact-success
  span.row
    padding 0 $gutter-primary
    @media (min-width $bp-md)
      padding-right 0
      padding-left 0
  .font-size-h1
    color $color-heading-primary
    margin-bottom $gutter-primary
