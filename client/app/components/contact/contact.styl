@import '../../common'

.contact

  .row
    margin-bottom $gutter-primary-lg + $gutter-primary
    > div
      @media screen and (min-width: $bp-md)
        padding-right $gutter-primary-lg

  .error
    float left
    padding $gutter-primary
    padding-bottom 0
    @media screen and (min-width: $bp-md)
      padding-bottom $gutter-primary

    margin 0
    color $color-red

  .has-error
    float left
    input,
    textarea
      border-color $color-red

  .submit-error
    width 100%
    padding $gutter-primary
    background $color-red
    color $color-highlight-primary
    line-height 1.6em
    a
      color $color-highlight-primary
      text-decoration underline
      &:hover,
      &:focus
        text-decoration none

  button
    position relative

    .loader
      position absolute
      top 1.8em
      left $button-spacing-lg-horizontal

.contact-success

  .row
    display block
  .sub
    display block
    clear both