@import '../../styles/variables'

.contact
  margin 0 auto
  float none !important
  width 100% !important
  max-width 500px

  h3.page-heading
    margin-bottom 0
    text-align left
    text-transform uppercase
    letter-spacing 2px
    @media (min-width $bp-md)
      margin-bottom $gutter-primary
      padding-bottom $gutter-primary
    @media (min-width $bp-lg)
      margin-bottom $gutter-primary-lg

  @media (min-width $bp-md)
    max-width 950px
    padding-right $gutter-primary
    padding-left $gutter-primary

  .main-content
    float left
    width 100%
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg - $gutter-primary-lg
      padding-left $gutter-primary-xx-lg
      padding-right $gutter-primary-xx-lg


  .row
    float none
    margin-bottom $gutter-primary-xx-lg
    color $color-white
    font-size 1.1em

    > .row
      margin-bottom $gutter-primary-xx-lg - 1em
      font-size 1.1em
      > .row
        > .row
          font-size 1em
          padding-top 1em
          &:first-child 
            padding-top 0

    .link-highlight-hover a
      color $color-white
      opacity .8
    
    &.large-row-spacing
      > h4
        margin-bottom $gutter-primary-x-lg

  .contact-signup-form-container
    padding-top 0
    padding-bottom 0
    .signup-form
      padding-top 0
      padding-bottom 0
      padding-left 0

  .row-error
    margin 0

  .row-textarea
    margin-bottom $gutter-primary-lg !important
    > .row:first-child
      margin-bottom 0

  .error
    float left
    padding $gutter-primary
    padding-bottom 0
    @media (min-width: $bp-md)
      padding-bottom $gutter-primary

    margin 0
    color $color-red

  .has-error
    float left
    input,
    textarea
      border-color $color-red

  .submit-error
    width 100%
    padding $gutter-primary
    background $color-red
    color $color-highlight-primary
    line-height 1.6em
    a
      color $color-highlight-primary
      text-decoration underline
      &:hover,
      &:focus
        text-decoration none

  button
    position relative

    .loader
      position absolute
      top 1.8em
      left $button-spacing-lg-horizontal

  .title
    display block
    margin-bottom $gutter-primary-lg
    text-transform uppercase

  .title-sub
    text-transform initial

  .sub-text
    color #C5C5C5
    margin-top -.5em

.contact-success
  span.row
    padding 0 $gutter-primary
    @media (min-width $bp-md)
      padding-right 0
      padding-left 0
  .font-size-h1
    color $color-heading-primary
    margin-bottom $gutter-primary
