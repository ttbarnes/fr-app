@import '../../styles/variables'

.music-album-reviews

  .main-content
    margin 0 auto
    color $color-highlight-secondary
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg - $gutter-primary-lg

  li
    border-bottom solid 1px $color-bg-secondary
    padding-bottom $gutter-primary-xx-lg

    &.last
      border-bottom 0 none
      padding-bottom 0

    .spacer
      padding-top $gutter-primary-xx-lg

  blockquote
    color $color-highlight-secondary
    .author
      margin-left 0

    b
      color $color-highlight-primary

