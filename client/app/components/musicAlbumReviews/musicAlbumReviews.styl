@import '../../styles/variables'

.music-album-reviews

  &.include-bg-img .img-bg
    &.black-white-album
      display none
      @media (min-width: $bp-lg)
        display block
        right -84%


  h3
    color $color-highlight-primary
    font-weight lighter
    padding-bottom $gutter-primary-lg
    margin-bottom $gutter-primary-lg

  .main-content
    margin 0 auto
    color $color-highlight-secondary
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg - $gutter-primary-lg

  li
  padding-bottom $gutter-primary-x-lg
    @media (min-width $bp-md)
      padding-bottom $gutter-primary-xx-lg

    &.last
      padding-bottom 0

    .spacer
      padding-top $gutter-primary-xx-lg

  blockquote
    color $color-highlight-secondary
    font-size 1em
    @media (min-width $bp-sm)
      font-size 1.2em
    .author
      margin-left 0
      color $color-highlight-primary
      padding-top $gutter-primary-lg
    b
      font-weight lighter
      color $color-highlight-primary

    .copy
      p:last-child
        margin-bottom 0

