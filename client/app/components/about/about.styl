@import '../../common'

.about

  .main-content
    font-size 1.1em

  img
    opacity 0.6
    max-width 100%
    display block
    margin 0 auto $gutter-primary-lg auto
    @media (min-width $bp-xs)
      float left
      margin-right $gutter-primary-lg
      max-width 250px
      opacity 0.4
      transition all 1s ease
      &:hover
        opacity 1

