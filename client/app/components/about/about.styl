@import '../../styles/variables'

.about

  .main-content
    max-width $section-max-width
    margin 0 auto
    @media (min-width $bp-md)
      font-size 1.1em

    p
      span.quote,
      span.highlight,
      i.highlight
        color $color-highlight-primary

      span.highlight-2
      i.highlight-2
        color #939393

      span.quote
        font-style italic

    blockquote
      @media (min-width $bp-lg)
        font-size 1.3em
      &.extra-margin-bottom
        margin 0 auto $gutter-primary-lg auto
      &.first
        max-width 880px
        .copy
          width 65%
          @media (min-width $bp-sm)
            width 83%
        small
          clear both
          display block
          opacity 0.6
          @media (min-width $bp-xs)
            clear none
            display inline-block
          .dash
            padding 0 0.5em

  .member-of-list-text-only
    margin-bottom $gutter-primary-xx-lg
    @media (min-width $bp-sm)
      margin-bottom $gutter-primary-xxx-lg
    li
      margin-right $gutter-primary-lg
      margin-bottom $gutter-primary
      @media (min-width $bp-sm)
        float left
    a
      color $color-highlight-primary

  .member-of-list
    text-align center
    @media (min-width $bp-sm)
      text-align left
    > p
      margin-bottom $gutter-primary-lg
    ul
      text-align center
    li
      margin-bottom $gutter-primary-x-lg
      @media (min-width $bp-sm)
        display inline-block
        vertical-align middle
        text-align center
        margin-bottom $gutter-primary-x-lg

      a
        color $color-highlight-primary
        img
          margin 0 $gutter-primary
          max-width 140px
          opacity .7
          transition all 0.2s ease
        &:hover img,
        &:focus img
          opacity 1


  .central-quotes
    margin-bottom $gutter-primary-lg
    @media (min-width $bp-sm)
      margin-bottom $gutter-primary-xx-lg
    blockquote
      padding-top $gutter-primary-lg
      padding-bottom $gutter-primary
      @media (min-width $bp-sm)
        padding-top $gutter-primary-xx-lg
        &.first
          padding-top $gutter-primary-x-lg
      &.last
        padding-top $gutter-primary-xx-lg
        @media (min-width $bp-sm)
          padding-top $gutter-primary-xx-lg

    .copy
      width 82%
    .author
      display block
      text-align center
