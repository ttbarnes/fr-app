@import '../../styles/variables';

.collaborator-ind

  .img-wrap,
  .main-content
    @media screen and (min-width: $bp-sm)
      float left

  .img-wrap
    max-width 250px
    margin 0 auto
    img
      width 100%

  .main-content
    padding-top $gutter-primary-lg
    text-align center
    @media screen and (min-width: $bp-sm)
      padding-top 0
      padding-left $gutter-primary-lg
      text-align left

  h4
    margin-bottom 0.15em
    color $color-highlight-primary
  i
    background-color $color-bg-secondary
    margin-right 0.55em

  li
    margin-bottom $gutter-primary

  .about,
  .collab-on,
  .urls
    margin-top $gutter-primary-x-lg

  .collab-on
    li
      list-style-type disc
      margin-left $gutter-primary-lg

  .urls
    li
      float left
      margin-right $gutter-primary-lg