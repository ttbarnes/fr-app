@import '../../styles/variables'

.news-home
  .main-content
    max-width $section-max-width
    margin 0 auto
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg

  li
    @media (min-width $bp-md)
      margin-bottom $gutter-primary-x-lg
      padding-bottom $gutter-primary-x-lg
    &.last
      padding-bottom 0
      margin-bottom 0
      border-bottom 0 none

    a
      display block
      max-height 400px

    .img-wrap
      position relative
      max-height 200px
      overflow hidden
      margin-bottom $gutter-primary-x-lg

    img
      width 100%
      opacity .8

    .social-share
      z-index 2
      position absolute
      bottom 0
      left 0
      width 100%
      background $tabbed-content-bg-desktop
      li,
      p
        float left
        padding $gutter-primary
        margin-bottom 0

      p
        margin-top 4px

    .copy
      width 100%
      padding $gutter-primary
      padding-bottom $gutter-primary-lg
      @media (min-width $bp-md)
        position absolute
        z-index 2
        bottom 0
        left 0
        right 0

    h2
      font-weight 300
      color $color-highlight-primary
      small
        font-size 65%
        color $color-text-primary
        margin-left 0.5em
        border-bottom solid 1px transparent
        transition all 1s ease
        margin-top -1px

    p
      margin-bottom 0
