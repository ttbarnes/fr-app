@import '../../styles/variables'

.news-home
  .main-content
    max-width $section-max-width
    margin 0 auto
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg

  li
    @media (min-width $bp-md)
      margin-bottom $gutter-primary-x-lg
      padding-bottom $gutter-primary-x-lg
    &.last
      padding-bottom 0
      margin-bottom 0
      border-bottom 0 none

    .inner
      position relative
      overflow hidden

    a
      display block
      max-height 400px

    img
      z-index 1
      width 100%
      opacity .5
      transition all 0.3s ease

    .copy
      width 100%
      background $tabbed-content-bg-desktop
      padding $gutter-primary
      padding-bottom $gutter-primary-lg
      @media (min-width $bp-md)
        position absolute
        z-index 2
        bottom 0
        left 0
        right 0

    h2
      font-weight 300
      color $color-highlight-primary
      small
        font-size 65%
        color $color-text-primary
        margin-left 0.5em
        border-bottom solid 1px transparent
        transition all 1s ease
        margin-top -1px

    p
      margin-bottom 0
