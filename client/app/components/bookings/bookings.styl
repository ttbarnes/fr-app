@import '../../styles/variables'

.bookings

  li
    padding $gutter-primary-lg 0
    border-bottom solid 1px $color-bg-secondary
    margin-bottom 0
    &.last
      border-bottom 0 none
    > div
      padding $gutter-primary-lg $gutter-primary

    .col-date
      font-weight 300
      span
        display block

      .day-month
        color $color-highlight-primary
        text-transform uppercase
        font-size $font-size-h2-mobile

      .time
        color $color-highlight-secondary

    .col-img
      display none
      padding-top 0
      padding-bottom 0
      @media (min-width: $bp-lg)
        display block

    img
      width 100%
      max-height 87.5px
      overflow hidden

    .col-title-venue
      @media (min-width: $bp-md)
        width 60%
      @media (min-width: $bp-lg)
        width 50%

    h2
      color $color-highlight-primary
      font-weight 300
      font-size $font-size-h4-desktop
      margin-bottom 0

    h3
      font-size $font-size-h4-mobile
      font-weight 300
      margin-bottom 0

    .col-links
      padding-top $gutter-primary-x-lg
      @media (min-width: $bp-md)
        color orange
        width 15%
      @media (min-width: $bp-lg)
        width 10%
