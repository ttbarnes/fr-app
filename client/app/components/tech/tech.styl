@import '../../styles/variables';

.tech

  .main-content
    margin 0 auto
    text-align center
    max-width 750px
    overflow hidden
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg


  .tabbed-nav,
  .tabbed-content
    width 100%

  .tabbed-nav
    transform skew(28.3deg)
    margin-left 2px

    li span
      transform skew(-28.3deg)

  .tabbed-content
    width 97%
    margin-left 3%
    min-height 280px

  .tabbed-content-list
    background $tabbed-content-bg
    opacity 0
    height 0
    transition all 0.5s ease
    overflow hidden
    &.active
      opacity 1
      height auto
      padding-top $gutter-primary-lg
      padding-bottom $gutter-primary-lg
    li
      text-align center
      padding $gutter-primary 0
      border-bottom solid 2px rgb(23, 23, 23)
      &.last
        border-bottom 0 none

    &.contains-sub-items
      padding-bottom 0
      li.last
        border-bottom solid 2px rgb(23, 23, 23)

  .tabbed-content-list-sub-items
    padding-top 0 !important