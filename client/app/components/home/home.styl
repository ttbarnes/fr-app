@import '../../common'

.home

  .img-bg
    display none
    @media (min-width $bp-md)
      display block
      width 100%
      padding-top 15%
    @media (min-width $bp-md + 225px)
      padding-top $header-height-desktop

  h3
    @media (min-width $bp-md)
      width 60%
    @media (min-width $bp-md + 225px)
      width 100%
      max-width 285px
    @media (min-width $bp-lg + 250px)
      max-width 100%

  .row-album-latest
    float none
    margin 0 auto
    position relative
    min-height 550px

    .album
      max-width 900px

      .col-last
        @media (min-width $bp-md + 225px)
          padding-top 20%



  .s-feeds
    text-align center
    padding-bottom $gutter-primary-x-lg
    @media (min-width $bp-md)
      padding-bottom $gutter-primary-xx-lg

    h4
      padding-top $gutter-primary-x-lg
      padding-bottom $gutter-primary-lg
      font-size $font-size-h1-mobile
      @media (min-width $bp-md)
        font-size $font-size-h1-desktop

    .col-fb,
    .col-tw
      width 340px
      padding 0 30px
      max-height 500px
      overflow hidden
      display inline-block
      vertical-align top
      opacity 0.65
      transition all 0.3s ease
      &:hover
        opacity 1

    .col-fb
      .fb-page
        overflow hidden
        > span
          margin -1px 0 0 -1px
          width 278px !important

