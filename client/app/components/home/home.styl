@import '../../styles/variables'

.home
  @media (min-width $bp-md)
    padding 0
    padding-bottom 0

  .img-bg
    display none
    @media (min-width $bp-md)
      display block
      width 100%
      padding-top 15%
      opacity 0
      transition opacity 2s ease;
      &.active
        opacity 1
    @media (min-width $bp-md + 225px)
      padding-top $header-height-desktop

  .main-content
    max-width 900px
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg - $gutter-primary-lg

  .video-wrapper
    @media (min-width $bp-lg + 400px)
      padding-bottom 31.25%

  .home-intro-heading
    font-size 2em
    font-weight 300
    letter-spacing 6px
    color #DADADA
    margin-bottom $gutter-primary-lg

  .home-intro
    margin-bottom 0
    @media (min-width: $bp-sm)
      margin-bottom $gutter-primary-xx-lg
    .col-img
      padding-bottom $gutter-primary-x-lg
      @media (min-width: $bp-md)
        max-width 450px
        padding-right $gutter-primary-x-lg
      img
        width 100%
        max-width 450px
        margin 0 auto
        display block

    .col-quotes
      max-width 450px
      margin 0 auto
      @media (min-width: $bp-md)
        max-width 100%

    blockquote
      position relative
      padding 0
      text-align left
      margin-bottom $gutter-primary-lg
      .copy
        font-size 0.8em
        letter-spacing 1px
        color #DADADA
        line-height 1.72em
        @media (min-width: $bp-md)
          max-width 74%
      span.quote:first-child
        margin-left 0
        position relative
        top 5px
        left -16px
        @media (min-width: $bp-md)
          top 22px

      span.quote:last-child
        position relative
        top -15px
        left 90%
        opacity .5
        @media (min-width: $bp-sm)
          display none
        @media (min-width: $bp-md)
          display block
          position absolute
          left initial
          right 5%
          top initial
          bottom 25%
        @media (min-width: $bp-lg)
          right 7%

      .author
        font-size 0.65em
        margin-left 6.5%
        line-height 2.3em
        @media (min-width: $bp-sm)
          margin-left 12.5%

    .last-blockquote
      margin-bottom 0

  .home-intro-footer-quote
    display none
    @media (min-width: $bp-sm)
      display block
      margin-top $gutter-primary-x-lg
      margin-bottom $gutter-primary-xx-lg
      padding-bottom $gutter-primary-xx-lg
    @media (min-width: $bp-lg)
      text-align center
    blockquote
      @media (min-width: $bp-sm)
        display inline-block
        position relative
        width 100%
        margin 0 auto
        text-align center
        > span.author
          margin-left 12.5%
        @media (min-width: $bp-md)
          max-width 490px
          margin 0 auto
          text-align left

          > span
            float left
            width auto
            &.copy
              max-width 86%
              padding-left 3%
            &.author
              clear both
              margin-left 12.5%
              font-size 0.65em
          span.copy + .quote
            position absolute
            bottom 31%
            right 8%
        @media (min-width: $bp-lg)
          max-width 80%
          > span
            float none
            &.author
              margin-left 0

    .quote
      vertical-align middle
      &:last-child
        position relative
        top 35px
    .author
      text-align center
      font-size 0.75em
      margin-left 9.4%
      line-height .75em
      padding-top $gutter-primary

  .row-social-icons-large
    margin-top $gutter-primary-xx-lg
    margin-bottom $gutter-primary-xxx-lg
    li
      text-align center
      width 33%
      float left
      color $color-blockquote
      @media (min-width: $bp-md)
        float left
        width 16.6666667%
      p
        margin-bottom 0
      i
        margin-bottom 15px
        opacity .8
        width 70px
        height 70px
        &::before
          margin-top 16px
          font-size 2em
        &.icon-ssp
          margin-right 0 !important
          &::before
            margin-top 11px
        &.icon-s-y::before
          margin-top 21px
      p
        font-size 1.1em
      a
        display block
      a:hover,
      a:focus
        i
          opacity 1

  h3
    margin-bottom $gutter-primary
    padding-bottom 0
    @media (min-width $bp-xxs)
      max-width 380px
      margin-right auto
      margin-left auto
    @media (min-width $bp-md)
      width 60%
      max-width 100%
      margin-right 0
      margin-left 0
    @media (min-width $bp-md + 225px)
      width 100%
      max-width 285px
    @media (min-width $bp-lg + 250px)
      max-width 100%

  .album-release-date
    margin-bottom $gutter-primary-lg
    @media (min-width $bp-md)
      padding-bottom $gutter-primary

  .row-signup-middle
    margin-bottom $gutter-primary-xxx-lg
    @media (min-width $bp-md)
      margin-top $gutter-primary-x-lg
    .signup-form
      padding-top 0
      padding-left 0
      .mchimp-form
        width 100%
      form
        min-width 350px
        max-width 350px


  .row-album-latest
    margin 0 auto
    position relative
    padding-bottom $gutter-primary-lg
    margin-bottom $gutter-primary-xx-lg
    @media (min-width $bp-md)
      padding-bottom 0

    .album
      padding-top 0

      .col-last
        @media (min-width $bp-md + 225px)
          padding-top 10%

    .copy
      @media (min-width $bp-sm)
        padding-bottom 0
      @media (min-width $bp-lg)
        padding-bottom $gutter-primary-lg

    p
      font-size $font-size-h2-mobile
      @media (min-width $bp-md)
        margin-bottom $gutter-primary
      @media (min-width $bp-lg)
        font-size $font-size-h2-desktop

    .download-links li.itunes-preorder
      @media (min-width: $bp-sm)
        margin-right auto
        margin-left auto
      @media (min-width: $bp-md)
        margin-top 0


  .quotes-middle
    blockquote
      display inline-block
      position relative
      width 100%
      max-width 630px
      margin 0 auto
      text-align left
      > span
        float left
        width auto
        &.copy
          max-width 86%
          padding-left 3%
        &.author
          clear both
          margin-left 10%
          font-size 0.65em
      span.copy + .quote
        position absolute
        bottom 31%
        right 8%

.featured-video
  @media (min-width: $bp-md)
    margin-top $gutter-primary-xx-lg

