@import '../../styles/variables'

.press

  h3
    color $color-highlight-primary
    font-weight lighter
    padding-bottom $gutter-primary-lg
    margin-bottom $gutter-primary-lg
  .main-content
    margin 0 auto
    color $color-highlight-secondary
    @media (min-width $bp-md)
      padding-top $gutter-primary-xx-lg - $gutter-primary-lg

  .grid-col-hover 
    text-align center
    > li
      float none
      margin 0 auto
      margin-bottom $gutter-primary-x-lg
      min-width 250px
      @media (min-width:$bp-sm)
        height 250px
        max-height 250px
      @media (min-width:$bp-md)
        display inline-block
        margin 0
      .inner 
        position relative
      img
          position relative
          z-index 1 
      a.hover-info
        position absolute
        width 100%
        left 0 
        top 0
        transition all 0.3s ease
        height 100%
        background-color rgba(40, 40, 40, 0.95)
        color #FFF
        z-index 2
        padding 0.8em
        text-align center
        @media (min-width:$bp-lg)
          top 500px
          opacity 0

      a
        z-index -1 !important
        @media (min-width:$bp-lg)
          z-index 2 !important
        &:hover
          display none
          opacity 0
          @media (min-width:$bp-lg)
            display block
            opacity 1
            
      &:hover
        @media (min-width:$bp-lg)
          a.hover-info
            top 0 
            opacity 1
            img
              width 100%
              max-width 100%
              margin 0 
        
      .hover-info-inner
        @media (min-width:$bp-lg + 200px)
          position relative
          padding-top $gutter-primary-xx-lg

      p
        opacity 0.6
        display none
        @media (min-width:$bp-lg)
          display block
      .author
        display none
        @media (min-width:$bp-lg + 200px)
          display block
          background #000
          padding 1em
          position absolute
          top 0 
          left 0
          text-align center
          margin -0.8em
          width calc(100% + 1.6em)
          
      .read-more
        text-decoration underline
        margin-bottom 0
        opacity 1
