@import '../../styles/variables';
@import 'modal.css';

.gallery-list
  list-style-type none
  margin 0
  padding 0

  > li
    height 150px
    overflow hidden
    cursor pointer
    a
      opacity 0.5
      transition all 0.2s ease
      &:hover,
      &:focus
        opacity 1
        img
          width 105%
          max-width 105%
          margin -2.5% 0 0 -2.5%

    img
      width 100%
      transition all 0.1s ease

.lightbox-nav
  display none !important
  position relative
  margin-bottom 12px
  height 22px
  text-align center
  font-size 0

  .btn-group
    vertical-align top

  .close
    position absolute
    top 0
    right 0

.lightbox-image-container
  position relative
  text-align center

.modal-backdrop.in
  opacity 0.7

.modal-dialog
  margin-top $header-height-mobile
  @media (min-width $bp-md)
    margin-top $header-height-desktop

.modal-body
  padding 0

.modal-content
  background none
  height auto !important
  box-shadow none
  -webkit-box-shadow none
  border 0 none
  border-radius 0

.lightbox-image-caption
  position absolute
  bottom 0.9em
  left 0
  font-size 1.1em
  font-weight bold
  text-align left

  span
    margin 0.9em 1.5em
    padding 0.25em;
    background-color $color-bg-secondary
    color $color-logo

